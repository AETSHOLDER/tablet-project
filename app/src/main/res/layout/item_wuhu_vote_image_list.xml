<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_check_state"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/radio_unselected" />

    <TextView
        android:id="@+id/orderNumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="A:"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/iv_check_state"
        android:layout_marginLeft="30dp"
        android:textColor="#333333"
        android:textSize="30sp"
        />

    <ImageView
        android:id="@+id/ima_content"
        android:layout_width="400dp"
        android:layout_height="225dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/orderNumb"
        android:gravity="center_vertical"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_chose_ima" />
</RelativeLayout>