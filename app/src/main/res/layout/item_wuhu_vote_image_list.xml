<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_check_state"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/radio_unselected" />

    <TextView
        android:id="@+id/orderNumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/iv_check_state"
        android:gravity="center"
        android:text="A:"
        android:textColor="#333333"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/ima_content"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/orderNumb"
        android:gravity="center_vertical"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_chose_ima" />
</RelativeLayout>