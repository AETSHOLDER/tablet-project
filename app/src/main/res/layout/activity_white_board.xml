<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login">
    <com.example.paperlessmeeting_demo.widgets.MyWhiteTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabMaxWidth="150dp"
        app:tabMinWidth="120dp" />

    <ImageView
        android:id="@+id/fullscreen_back"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:src="@mipmap/fullscreen_close"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"/>

    <com.example.paperlessmeeting_demo.widgets.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabLayout"
        android:isScrollContainer="false" />
</RelativeLayout>