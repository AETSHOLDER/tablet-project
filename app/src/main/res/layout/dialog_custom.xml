<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog_wuhu"
     >


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="是否利用以往会议模板"
        android:textColor="#333333"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_below="@id/title_tv"
        android:text="是否利用以往会议模板"
        android:textColor="#333333"
        android:textSize="30sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/content_tv"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="45dp"
        android:background="#B9B9B9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="38dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="250dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="225dp"
            android:layout_marginRight="75dp"
            android:layout_weight="1"
            android:background="@drawable/bg_delete_cancel2"
            android:gravity="center"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/confir_btn"
            android:layout_width="250dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="225dp"
            android:layout_weight="1"
            android:background="@drawable/bg_delete_confirm"
            android:gravity="center"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="21sp" />
    </LinearLayout>
</RelativeLayout>
