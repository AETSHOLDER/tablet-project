<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_launch"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#559cff">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:src="@mipmap/fullscreen_back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginRight="260dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/initiate_endorsement"
            style="@style/launch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_exti"
            android:text="退出"
            android:textColor="#000000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/temporary_summary"
            style="@style/launch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:layout_toLeftOf="@id/initiate_endorsement"
            android:text="提交"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mm"
        android:layout_marginLeft="260dp"
        android:layout_marginRight="260dp"
        android:background="#ffffff"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/root_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="某年度销售部第三季度会议"
                android:textColor="#ff1f2e4d"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="会议纪要"
                android:textColor="#ff1f2e4d"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="168dp"
                android:layout_marginRight="168dp"
                android:layout_marginTop="30dp"
                android:background="#D3DBEB" />

            <TextView
                android:id="@+id/meeting_time"
                style="@style/launch_endorsement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间：2020年9月28日" />

            <TextView
                android:id="@+id/meeting_place"
                style="@style/launch_endorsement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:text="地点：XX号楼XX室" />

            <TextView
                android:id="@+id/meeting_attendence"
                style="@style/launch_endorsement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="168dp"
                android:layout_marginRight="168dp"
                android:layout_marginTop="15dp"
                android:background="#D3DBEB" />

            <LinearLayout
                android:id="@+id/content_meeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tittle1"
                        style="@style/launch_endorsement_editText_tittle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会议议题" />

                    <TextView
                        android:id="@+id/content1"
                        style="@style/launch_endorsement_editText_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tittle2"
                        style="@style/launch_endorsement_editText_tittle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会议结论" />

                    <TextView
                        android:id="@+id/content2"
                        style="@style/launch_endorsement_editText_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本周项目进展，对议题的结论" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tittle3"
                        style="@style/launch_endorsement_editText_tittle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="问题分析" />

                    <TextView
                        android:id="@+id/content3"
                        style="@style/launch_endorsement_editText_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="遇到的问题，原因，改进方法" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tittle4"
                        style="@style/launch_endorsement_editText_tittle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务安排" />

                    <TextView
                        android:id="@+id/content4"
                        style="@style/launch_endorsement_editText_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务内容，由谁负责" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/signature_pad_ll"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:background="#8593AA">

        <com.example.paperlessmeeting_demo.widgets.GestureSignatureView
            android:id="@+id/signature_pad"
            android:layout_width="870dp"
            android:layout_height="235dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_sign_approval" />

        <TextView
            android:id="@+id/cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/signature_pad"
            android:gravity="center"
            android:shadowColor="#ff59749e"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:text="签名区域"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/signature_pad"
            android:orientation="vertical">

            <TextView
                android:id="@+id/confir_sign"
                style="@style/launch_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/initiate_endorsement"
                android:text="确定"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/renew_sign"
                style="@style/launch_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@id/initiate_endorsement"
                android:text="重签"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableLeft="@mipmap/ic_launch_tip"
                android:text="提示：
确定签名后无法再修改，"
                android:textColor="#ffff6f00"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
