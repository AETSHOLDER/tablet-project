<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/ima_close"
        android:background="@mipmap/bg_invita_code"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/code_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aa"
        android:background="@drawable/bg_invite_code"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="68dp"
            android:gravity="center"
            android:text="您的邀请码是:"
            android:textColor="#ff5b5b5b"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="70dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="5200"
            android:textColor="#006CFF"
            android:textSize="68sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/ok_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/code_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@mipmap/ic_invita_code_konw"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="知道了"
        android:textColor="#ffffffff"
        android:textSize="32sp" />

</RelativeLayout>
