<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#559cff">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:src="@mipmap/fullscreen_back" />
    </RelativeLayout>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="60dp"
        android:src="@mipmap/about_software_logo" />

    <ImageView
        android:layout_width="788dp"
        android:layout_height="290dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:src="@mipmap/bg_about_software" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="版本信息"
        android:textColor="#ffababab"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/version_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Version 1.0"
        android:textColor="#ff3c3c3c"
        android:textSize="26sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="版权所有"
        android:textColor="#ffababab"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="江苏中协智能科技有限公司"
        android:textColor="#ff3c3c3c"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="官方网址"
        android:textColor="#ffababab"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/web_site"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/ic_web_left"
        android:paddingLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="http://www.cvi-c.com/"
        android:textColor="#0030B2"
        android:textSize="24sp" />
</LinearLayout>
