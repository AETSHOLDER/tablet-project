<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/type_ima"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/aa" />

        <TextView
            android:id="@+id/fiel_name"
            style="@style/file_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/type_ima"
            android:text="无纸化会议厅无纸化会" />

        <TextView
            android:id="@+id/person"
            style="@style/file_text_view"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="480dp"
            android:layout_toRightOf="@id/fiel_name"
            android:text="张益达" />

        <TextView
            android:id="@+id/time"
            style="@style/file_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_toRightOf="@id/person"
            android:text="2020-09-09 10:30" />

        <TextView
            android:id="@+id/open"
            style="@style/file_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="180dp"
            android:background="@null"
            android:enabled="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="公开"
            android:textColor="#3377FF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/proprietary"
            style="@style/file_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="120dp"
            android:background="@null"
            android:enabled="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="私有"
            android:textColor="#3377FF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/music_strat"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/open"
            android:background="@drawable/bg_music"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_music_strat" />

        <ImageView
            android:id="@+id/music_reset"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/music_strat"
            android:background="@drawable/bg_music"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_reset" />

    </RelativeLayout>
</RelativeLayout>