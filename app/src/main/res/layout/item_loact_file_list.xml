<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/type_ima"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:src="@mipmap/aa" />

        <TextView
            android:id="@+id/fiel_name"
            style="@style/file_text_view"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/type_ima"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="380dp"
            android:text="无纸化会议厅无纸化会"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#3F3932"
            android:textSize="45sp"/>

        <TextView
            android:id="@+id/person"
            style="@style/file_text_view"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="480dp"
            android:layout_toRightOf="@id/fiel_name"
            android:text="张益达" />

        <TextView
            android:id="@+id/time"
            style="@style/file_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_toRightOf="@id/person"
            android:text="2020-09-09 10:30" />

        <TextView
            android:id="@+id/open"
            style="@style/file_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="228dp"
            android:background="@null"
            android:enabled="true"
            android:gravity="center_vertical|end"
            android:text="公开"
            android:textColor="#3377FF"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/proprietary"
            style="@style/file_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="135dp"
            android:background="@null"
            android:enabled="true"
            android:gravity="center_vertical|end"
            android:text="私有"
            android:textColor="#3377FF"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/push_file"
            style="@style/file_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="44dp"
            android:background="@null"
            android:enabled="true"
            android:gravity="center_vertical|end"
            android:text="推送"
            android:textColor="#3377FF"
            android:textSize="35sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/music_strat"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/open"
            android:background="@drawable/bg_music"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_music_strat" />

        <ImageView
            android:id="@+id/music_reset"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/music_strat"
            android:background="@drawable/bg_music"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_reset" />

    </RelativeLayout>
</RelativeLayout>