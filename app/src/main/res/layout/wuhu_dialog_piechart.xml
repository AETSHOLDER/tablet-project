<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/alert_piechart_border">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/bgColor"
            android:text="我是标题我是标题我是标题我是标题"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="normal"/>

        <ImageView
            android:id="@+id/dialog_close_icon"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/close_1" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/PieViewParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_title"
        android:layout_marginBottom="180dp"
        android:layout_marginTop="136dp">

        <com.example.paperlessmeeting_demo.widgets.PieView
            android:id="@+id/pieView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center" />
        <LinearLayout
            android:id="@+id/option_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            >

        <RelativeLayout
            android:id="@+id/number_rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"

            >
            <TextView
                android:id="@+id/number_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="24sp"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/option_ima1"
                android:layout_width="270dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/number_tv1"
                android:layout_height="115dp"
                android:scaleType="fitCenter"
           />
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/number_rl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/number_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/option_ima2"
                    android:layout_width="270dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/number_tv2"
                    android:layout_height="115dp"
                    android:scaleType="fitCenter"
                    />
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/number_rl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/number_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/option_ima3"
                    android:layout_width="270dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/number_tv3"
                    android:layout_height="115dp"
                    android:scaleType="fitCenter"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/number_rl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/number_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/option_ima4"
                    android:layout_width="270dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/number_tv4"
                    android:layout_height="115dp"
                    android:scaleType="fitCenter"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/pieView"
        android:layout_marginTop="-80dp">
        <TextView
            android:id="@+id/dialog_bottom"
            android:layout_width="1436dp"
            android:layout_height="43dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="6dp"
            android:text="匿名投票：10"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="normal" />

    </RelativeLayout>


</LinearLayout>

