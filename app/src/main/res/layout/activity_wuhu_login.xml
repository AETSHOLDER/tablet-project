<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/theme_bg_ima"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@mipmap/bg_wuhu_login"/>
    <!--虚化页面布局-start-->

    <RelativeLayout
        android:id="@+id/agenda_rl"
        android:layout_width="898dp"
        android:layout_height="772dp"
        android:layout_marginLeft="282dp"
        android:layout_marginTop="150dp"
        android:background="@mipmap/bg_agenda"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:shadowColor="#b80b6ab9"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="3.0"
            android:text="无纸化会议系统"
            android:textColor="#5078FA"
            android:textSize="46sp" />

        <RelativeLayout
            android:id="@+id/left_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="200dp">

            <LinearLayout
                android:id="@+id/aa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_date1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/yaer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:gravity="center"
                    android:text="2021"
                    android:textColor="#ffffffff"
                    android:textSize="32sp" />


                <TextView
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="06/10"
                    android:textColor="#ffffffff"
                    android:textSize="26sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/aa"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_date2">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="14dp"
                    android:gravity="center"
                    android:text="8:00 - 10:30"
                    android:textColor="#ff4b4b4b"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="216dp"
            android:layout_toRightOf="@id/left_rl"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="欢迎  "
                    android:textColor="#ff4b4b4b"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/name_attendee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/bb"
                    android:gravity="center"
                    android:text="陈晨臣"
                    android:textColor="#597EF7"
                    android:textSize="28sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/name_attendee"
                    android:gravity="center"
                    android:text="  参加"
                    android:textColor="#ff4b4b4b"
                    android:textSize="28sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <View
                    android:id="@+id/cc"
                    android:layout_width="86dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:background="#E5E5E5" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/cc"
                    android:background="#E5E5E5" />

            </RelativeLayout>

            <TextView
                android:id="@+id/issues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销售部季度总结大会"
                android:textColor="#ff4b4b4b"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_rl"
            android:layout_marginLeft="140dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="190dp"
                android:layout_marginBottom="30dp"
                android:background="#D2D2D2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="参会人员信息:"
                android:textColor="#ff4b4b4b"
                android:textSize="26sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/name1"
                    style="@style/agenda_name"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:text="主席" />

                <TextView
                    android:id="@+id/name1_value"
                    style="@style/agenda_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/name1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/name2"
                    style="@style/agenda_name"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:text="秘书" />

                <TextView
                    android:id="@+id/name2_value"
                    style="@style/agenda_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/name2" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/name3"
                    style="@style/agenda_name"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:text="服务人员" />

                <TextView
                    android:id="@+id/name3_value"
                    style="@style/agenda_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/name3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/name4"
                    style="@style/agenda_name"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:text="其他成员" />

                <TextView
                    android:id="@+id/name4_value"
                    style="@style/agenda_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/name4" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/name5_rl"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/name5"
                    style="@style/agenda_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="外来成员" />

                <TextView
                    android:id="@+id/name5_value"
                    style="@style/agenda_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/name5" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <!--虚化页面布局-end-->

    <LinearLayout
        android:id="@+id/login_left"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:id="@+id/tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#b80b6ab9"
            android:shadowDx="0"
            android:shadowDy="1"
           android:layout_marginLeft="120dp"
            android:shadowRadius="3.0"
            android:text="无纸化会议系统"
            android:textColor="#5078FA"
            android:textSize="60sp" />
        <TextView
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_below="@id/tt"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="120dp"
            android:shadowColor="#b80b6ab9"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="3.0"
            android:text="Paperless Conference"
            android:textColor="#AAAAAA"
            android:textSize="35sp" />
        <ImageView
            android:layout_width="880dp"
            android:layout_height="580dp"
            android:src="@mipmap/bg_wuhu_login_left"
           android:scaleType="fitCenter"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="快来加入会议吧 "
                android:textColor="#242425"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tip"
                android:text=" @吴鹏飞"
                android:textColor="#ff9979fb"
                android:textSize="22sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="请签名进入会议"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="52dp"
            android:gravity="center"
            android:text="会议时间：2020-10-17  09:20-12:00"
            android:textColor="#ff585858"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/entry_meet"
            android:layout_width="352dp"
            android:layout_height="60dp"
            android:layout_gravity="clip_horizontal|center_vertical"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_entry_meet"
            android:gravity="center"
            android:text="进入会议"
            android:textColor="#ffffffff"
            android:textSize="24sp" />

    </LinearLayout>
    <!--临时会议布局-->
    <RelativeLayout
        android:id="@+id/extraordinary_include_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="330dp"
        android:layout_marginTop="133dp"
        android:visibility="gone">

        <include layout="@layout/extraordinary_include" />
    </RelativeLayout>

    <View
        android:id="@+id/vv"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginLeft="1180dp" />
    <!--非临时会议布局-->
    <RelativeLayout
        android:id="@+id/unextraordinary_include_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="330dp"
        android:layout_marginTop="133dp"
        android:layout_toRightOf="@id/vv"
        android:orientation="vertical">
        <!--        <TextView-->
        <!--            android:id="@+id/extraordinary_tv"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="临时会议"-->
        <!--            android:textColor="#ffa1b3c1"-->
        <!--            android:textSize="22sp" />-->

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            app:tabBackground="@drawable/wuhu_login_background_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabMaxWidth="150dp"
            app:tabMinWidth="120dp"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="#ffffff"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="#666666" />

        <com.example.paperlessmeeting_demo.widgets.NoScrollViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true" />

        <ImageView
            android:id="@+id/visitor"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view_pager"
            android:layout_marginBottom="-400dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/visitor" />

    </RelativeLayout>

</RelativeLayout>
