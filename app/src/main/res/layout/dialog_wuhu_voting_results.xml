<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:text="投票结果"
        android:textColor="#000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/niming"
        android:layout_width="78dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="95dp"
        android:background="@drawable/rectangle_blue"
        android:scaleType="fitXY"
        android:text="匿名"
        android:textColor="@color/alertdialog_niming_blue"
        android:textSize="24sp"></Button>

    <Button
        android:id="@+id/danxaun"
        android:layout_width="78dp"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/niming"
        android:background="@drawable/rectangle_yellow"
        android:scaleType="fitXY"
        android:text="单选"
        android:textColor="@color/alertdialog_danxuan_yellow"
        android:textSize="24sp"></Button>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
       android:background="#D9D9D9"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="35dp"
        />
    <TextView
        android:id="@+id/vote_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:text="fgsdhshsh"
        android:gravity="center"
        android:textSize="28sp"
        android:layout_marginBottom="15dp"
        android:textColor="#1D1D1D"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <com.example.paperlessmeeting_demo.widgets.MyListView
        android:id="@+id/myList_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:divider="@null"
        >
    </com.example.paperlessmeeting_demo.widgets.MyListView>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#C2CCD3"
        />
       <TextView
           android:id="@+id/personnel"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          android:textColor="#1D1D1D"
           android:gravity="left"
           android:layout_marginTop="30dp"
           android:layout_marginLeft="45dp"
           android:textSize="25sp"
           />
</LinearLayout>
    </ScrollView>
</LinearLayout>