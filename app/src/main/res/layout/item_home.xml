<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/text_chose"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:textSize="18sp"
        android:gravity="right"
        android:text="选项1:" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/text_chose"
        android:layout_toLeftOf="@+id/add_chose"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="请输入"
        android:textColorHint="#7c7c7c"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/add_delet"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/delet" />

    <ImageView
        android:id="@+id/add_chose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/add_delet"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/addchose" />


</RelativeLayout>