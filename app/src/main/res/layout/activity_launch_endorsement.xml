<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_launch2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#559cff">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:src="@mipmap/fullscreen_back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginRight="260dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/load_tv_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/load_tv"
                style="@style/launch_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:text="上传签批"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/initiate_endorsement"
            style="@style/launch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:layout_toLeftOf="@+id/load_tv_ll"
            android:gravity="center"
            android:text="发起签批" />

        <TextView
            android:id="@+id/temporary_summary"
            style="@style/launch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:layout_toLeftOf="@id/initiate_endorsement"
            android:gravity="center"
            android:text="暂存纪要" />


    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="260dp"
        android:layout_marginRight="260dp"
        android:background="#ffffff"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/root_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="某年度销售部第三季度会议"
                android:textColor="#ff1f2e4d"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="会议纪要"
                android:textColor="#ff1f2e4d"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="168dp"
                android:layout_marginRight="168dp"
                android:layout_marginTop="30dp"
                android:background="#D3DBEB" />

            <TextView
                android:id="@+id/meeting_time"
                style="@style/launch_endorsement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间：2020年9月28日" />

            <TextView
                android:id="@+id/meeting_place"
                style="@style/launch_endorsement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:text="地点：XX号楼XX室" />

            <TextView
                android:id="@+id/meeting_attendence"
                style="@style/launch_endorsement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参会人员：陶璐，费黄达，XX" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="168dp"
                android:layout_marginRight="168dp"
                android:layout_marginTop="15dp"
                android:background="#D3DBEB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tittle1"
                    style="@style/launch_endorsement_editText_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.会议议题" />

                <EditText
                    android:id="@+id/content1"
                    style="@style/launch_endorsement_editText_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:hint="请输入议题内容" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tittle2"
                    style="@style/launch_endorsement_editText_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.会议结论" />

                <EditText
                    android:id="@+id/content2"
                    style="@style/launch_endorsement_editText_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入结论内容" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tittle3"
                    style="@style/launch_endorsement_editText_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.问题分析" />

                <EditText
                    android:id="@+id/content3"
                    style="@style/launch_endorsement_editText_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入问题分析内容"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tittle4"
                    style="@style/launch_endorsement_editText_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.任务安排" />

                <EditText
                    android:id="@+id/content4"
                    style="@style/launch_endorsement_editText_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入任务安排内容" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="64dp">

                <TextView
                    android:id="@+id/launch_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="168dp"
                    android:gravity="center"
                    android:text="参会成员待签字"
                    android:textColor="#ff1f2e4d"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/launch_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="168dp"
                    android:textColor="#ff1f2e4d"
                    android:textSize="18sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="168dp"
                android:layout_marginRight="168dp"
                android:layout_marginTop="20dp"
                android:background="#D3DBEB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="280dp"
                android:layout_marginRight="280dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/vv"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />

                <com.example.paperlessmeeting_demo.widgets.MyGridView
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:horizontalSpacing="2dp"
                    android:numColumns="7"
                    android:scrollbars="none"
                    android:verticalSpacing="2dp"></com.example.paperlessmeeting_demo.widgets.MyGridView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
