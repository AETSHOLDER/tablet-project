<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
   <!-- <include layout="@layout/wuhu_fragment_layout"/>-->
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="删除当前"/>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="添加"/>

    <RelativeLayout
        android:id="@+id/tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDFEFF">

        <LinearLayout
            style="@style/wuhu_tittle_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3月16日   周三  14:22"
                android:textColor="#ff1d1d1d"
                android:textSize="35sp" />

            <RelativeLayout
                android:id="@+id/name_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="请输入姓名"
                    android:textColor="#ff000000"
                    android:textSize="37sp" />

                <RelativeLayout
                    android:id="@+id/edit_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:layout_toRightOf="@id/name">

                    <TextView
                        android:id="@+id/vv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="35dp"
                        android:gravity="center"
                        android:text="欢迎您!"
                        android:textColor="#ff000000"
                        android:textSize="37sp" />

                    <ImageView
                        android:id="@+id/ima_edit"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/vv"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_edit_name_normal" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
<RelativeLayout
    android:id="@+id/cc1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:visibility="gone"
    >

    <RelativeLayout
        android:id="@+id/finish_ll"
        style="@style/wuhu_tittle_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="100dp">

        <ImageView
            android:id="@+id/aa4"
            style="@style/wuhu_tittle_ima"
            android:src="@mipmap/ic_wuhu_finish_meeting" />

        <TextView
            style="@style/wuhu_tittle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aa4"
            android:text="退出会议" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edit_ll"
        style="@style/wuhu_tittle_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="64dp"
        android:layout_toLeftOf="@id/finish_ll">

        <ImageView
            android:id="@+id/aa3"
            style="@style/wuhu_tittle_ima"
            android:src="@mipmap/ic_wuhu_consult" />

        <TextView
            style="@style/wuhu_tittle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aa3"
            android:text="编辑" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/consult_ll"
        style="@style/wuhu_tittle_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="64dp"
        android:layout_toLeftOf="@id/edit_ll">

        <ImageView
            android:id="@+id/aa2"
            style="@style/wuhu_tittle_ima"
            android:src="@mipmap/ic_wuhu_edit" />

        <TextView
            style="@style/wuhu_tittle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aa2"
            android:text="查阅" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vote_ll"
        style="@style/wuhu_tittle_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="64dp"
        android:layout_toLeftOf="@id/consult_ll">

        <ImageView
            android:id="@+id/aa1"
            style="@style/wuhu_tittle_ima"
            android:src="@mipmap/ic_wuhu_vote" />

        <TextView
            style="@style/wuhu_tittle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aa1"
            android:text="投票" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shareScreen_ll1"
        style="@style/wuhu_tittle_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="64dp"
        android:layout_toLeftOf="@id/vote_ll">
        <ImageView
            android:id="@+id/aa41"
            style="@style/wuhu_tittle_ima"
            android:src="@mipmap/share_screen" />
        <TextView
            android:id="@+id/shareScreen_tv"
            style="@style/wuhu_tittle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aa41"
            android:text="pc投屏" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/home_ll"
        style="@style/wuhu_tittle_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="64dp"
        android:layout_toLeftOf="@id/shareScreen_ll1">

        <ImageView
            android:id="@+id/aa5"
            style="@style/wuhu_tittle_ima"
            android:src="@mipmap/ic_wuhu_home" />

        <TextView
            style="@style/wuhu_tittle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aa5"
            android:text="首页" />

    </RelativeLayout>

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:id="@+id/consult_ll1"
                style="@style/wuhu_tittle_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="64dp">

                <ImageView
                    android:id="@+id/aa21"
                    style="@style/wuhu_tittle_ima"
                    android:src="@mipmap/ic_wuhu_edit" />

                <TextView
                    style="@style/wuhu_tittle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aa21"
                    android:text="查阅" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vote_ll1"
                style="@style/wuhu_tittle_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="64dp"
                android:layout_toLeftOf="@id/consult_ll1">

                <ImageView
                    android:id="@+id/aa11"
                    style="@style/wuhu_tittle_ima"
                    android:src="@mipmap/ic_wuhu_vote" />

                <TextView
                    style="@style/wuhu_tittle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aa11"
                    android:text="投票" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/home_ll1"
                style="@style/wuhu_tittle_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="64dp"
                android:layout_toLeftOf="@id/vote_ll1">

                <ImageView
                    android:id="@+id/aa31"
                    style="@style/wuhu_tittle_ima"
                    android:src="@mipmap/ic_wuhu_home" />

                <TextView
                    style="@style/wuhu_tittle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aa31"
                    android:text="首页" />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tittle"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="-2dp">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/left_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="200dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_wuhu_left" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rigth_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
      android:layout_marginRight="50dp"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="200dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_wuhu_rigth"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/edit_name_rl"
        android:layout_width="407dp"
        android:layout_height="100dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_below="@id/tittle"
        android:background="@drawable/bg_wuhu_name"
        >

        <ImageView
            android:id="@+id/comfirm"
            android:layout_width="45dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="25dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_wuhu_confirm" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:maxLength="6"
            android:layout_toLeftOf="@id/comfirm"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入姓名"
            android:textColor="#ff1d1d1d"
            android:textSize="37sp" />

    </RelativeLayout>

</RelativeLayout>
