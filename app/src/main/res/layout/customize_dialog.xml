<?xml version="1.0" encoding="utf-8"?><!--android:background="@color/common_light_black_transparent"--><!--xmlns:tools="http://schemas.android.com/tools"-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/duihuakuang">
    <!--android:background="@android:color/white"-->

    <ImageView
        android:id="@+id/dialog_new_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:src="@mipmap/ic_launcher_round" />
    <!--android:scaleType="centerCrop"-->

    <TextView
        android:id="@+id/dialog_new_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_new_img"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:textColor="#333333"
        android:textSize="17sp"
        tools:text="Games of Thrones, LOL." />
    <!--lineSpacingExtra 行间距-->
    <View
        android:id="@+id/custom_top_line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/dialog_new_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="15dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/custom_top_line"
        android:layout_marginBottom="3dp"
        android:paddingEnd="3dp"
        android:paddingStart="3dp">

        <TextView
            android:id="@+id/dialog_new_cancle"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:padding="3dp"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="取消" />

        <View
            android:id="@+id/dialog_new_line"
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/dialog_new_confirm"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="确认" />
    </LinearLayout>
</RelativeLayout>

