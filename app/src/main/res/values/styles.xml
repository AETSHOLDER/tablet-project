    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateDrawable">@anim/cycle_anim</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="noteTheme" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
